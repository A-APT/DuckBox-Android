<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vd_image_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/banner1"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/vd_image_indicator_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 / 3"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/vd_image_close_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/close_white"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/vd_image_indicator_tv"
        app:layout_constraintBottom_toBottomOf="@id/vd_image_indicator_tv"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>