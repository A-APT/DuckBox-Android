<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cv_second_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="투표 유형"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <RadioGroup
            android:id="@+id/cv_second_type_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/cv_second_type_tv">

                <RadioButton
                    android:id="@+id/cv_second_type_rb1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:background="@drawable/create_vote_type_selector"
                    android:textColor="@drawable/create_vote_type_text_selector"
                    android:drawableRight="@drawable/check_blue"
                    android:text="단일 선택"
                    android:button="@null"
                    android:padding="15dp"
                    android:drawablePadding="20dp"
                    android:layout_marginStart="30dp"/>

                <RadioButton
                    android:id="@+id/cv_second_type_rb2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/create_vote_type_selector"
                    android:textColor="@drawable/create_vote_type_text_selector"
                    android:text="복수 선택"
                    android:button="@null"
                    android:padding="15dp"
                    android:drawablePadding="20dp"
                    android:layout_marginStart="15dp"/>


        </RadioGroup>

        <TextView
            android:id="@+id/cv_second_list_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="선택 리스트"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/cv_second_type_rg"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cv_second_list_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:maxHeight="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_second_list_tv"
            tools:listitem="@layout/row_cv_second_text"/>

        <TextView
            android:id="@+id/cv_second_add_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_color_box_5dp"
            android:padding="15dp"
            android:textCursorDrawable="@color/black"
            android:text="항목 추가"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintTop_toBottomOf="@id/cv_second_list_rv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>