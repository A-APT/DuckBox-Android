<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cv_second_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="투표 유형"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/cv_second_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintTop_toBottomOf="@id/cv_second_type_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/cv_second_rb1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/create_vote_type_selector"
                android:buttonTint="@color/main"
                android:layoutDirection="rtl"
                android:layout_marginStart="10dp"
                android:padding="15dp"
                android:text="단일 선택"
                android:checked="true"
                android:textColor="@drawable/create_vote_type_text_selector"/>

            <RadioButton
                android:id="@+id/cv_second_rb2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/create_vote_type_selector"
                android:button="@drawable/create_vote_check_selector"
                android:buttonTint="@color/main"
                android:padding="15dp"
                android:layoutDirection="rtl"
                android:text="복수 선택"
                android:textColor="@drawable/create_vote_type_text_selector" />

        </RadioGroup>

        <TextView
            android:id="@+id/cv_second_list_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="선택 리스트"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/cv_second_rg"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택지와 해당 이미지는 순서가 동일합니다."
            android:textColor="@color/main"
            android:textSize="10sp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="@id/cv_second_list_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/cv_second_list_tv"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cv_second_image_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_second_list_tv"
            tools:listitem="@layout/row_cv_second_image"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cv_second_text_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:maxHeight="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_second_image_rv"
            tools:listitem="@layout/row_cv_second_text"/>


