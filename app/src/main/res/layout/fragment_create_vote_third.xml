<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cv_third_option_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="옵션"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="터치해서 선택해주세요."
            android:textColor="@color/main"
            android:textSize="10sp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="@id/cv_third_option_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/cv_third_option_tv"/>

        <TextView
            android:id="@+id/cv_third_list_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="참가자명단 첨부"
            android:background="@drawable/gray_color_box_5dp"
            android:padding="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/cv_third_option_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/cv_third_list_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/folder_black"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="@id/cv_third_list_tv"
            app:layout_constraintTop_toTopOf="@id/cv_third_list_tv"
            app:layout_constraintBottom_toBottomOf="@id/cv_third_list_tv"/>

        <TextView
            android:id="@+id/cv_third_list_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_stroke_white_solid_box_5dp"
            android:padding="14dp"
            android:text="2022 선거 참여 명단 [엑셀 파일 제목]"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:layout_marginTop="-1dp"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintTop_toBottomOf="@id/cv_third_list_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/cv_third_list_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="참가자 명단에 따라 투표 자격이 주어집니다."
            android:textColor="@color/darkgray2"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_third_list_title_tv" />

        <TextView
            android:id="@+id/cv_third_alarm_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="참여자들에게 알림 보내기"
            android:background="@drawable/gray_color_box_5dp"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/cv_third_list_info_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/cv_third_alarm_iv"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/bell_black"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="@id/cv_third_alarm_tv"
            app:layout_constraintTop_toTopOf="@id/cv_third_alarm_tv"
            app:layout_constraintBottom_toBottomOf="@id/cv_third_alarm_tv"/>

        <TextView
            android:id="@+id/cv_third_reward_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="리워드"
            android:background="@drawable/gray_color_box_5dp"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/cv_third_alarm_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/cv_third_reward_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/reward_black"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="@id/cv_third_reward_tv"
            app:layout_constraintTop_toTopOf="@id/cv_third_reward_tv"
            app:layout_constraintBottom_toBottomOf="@id/cv_third_reward_tv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>