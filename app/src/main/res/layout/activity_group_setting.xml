<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.GroupSettingActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/groupBackground"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:contentDescription="groupBackground"
            android:scaleType="fitXY"
            android:src="@drawable/banner1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:contentDescription="gradation"
            android:scaleType="fitXY"
            android:src="@drawable/gradation" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:contentDescription="backbtn"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/back"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:text="그룹 정보"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/updateGroup"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="update"
                app:srcCompat="@drawable/pencil" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/groupImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="30dp"
            android:src="@drawable/banner2" />
    </FrameLayout>

    <TextView
        android:id="@+id/groupTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:paddingHorizontal="30dp"
        android:text="GroupTitle"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:orientation="horizontal"
        android:paddingHorizontal="30dp">

        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="소개"
            android:textColor="@color/darkgray2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/groupDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_weight="1"
            android:text="groupDescription"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:orientation="horizontal"
        android:paddingHorizontal="30dp">

        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="그룹원"
            android:textColor="@color/darkgray2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/groupMembers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_weight="1"
            android:text="groupMembers"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/membersBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sub1_color_box_10dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp"
            android:text="그룹원 보기"
            android:textColor="@color/main" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@drawable/border_bottom"
        android:orientation="horizontal"
        android:paddingHorizontal="30dp"
        android:paddingBottom="36dp">

        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="그룹인증"
            android:textColor="@color/darkgray2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/groupValid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_weight="1"
            android:text="groupValid"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingHorizontal="30dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/outGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그룹 탈퇴" />

        <TextView
            android:id="@+id/reportGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="그룹 신고" />

        <TextView
            android:id="@+id/deleteGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="그룹 삭제" />
    </LinearLayout>

</LinearLayout>