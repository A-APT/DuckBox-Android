<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/vd_check_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/press_check"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="@id/vd_text_cv"
        app:layout_constraintTop_toTopOf="@id/vd_text_cv"
        app:layout_constraintBottom_toBottomOf="@id/vd_text_cv"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/vd_text_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        app:cardUseCompatPadding="true"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/vd_text_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/white_color_box_5dp"
            android:paddingVertical="17dp"
            android:paddingStart="22dp"
            android:text="1. 절대 있을 수 없다.."
            android:textSize="15sp" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>