<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="21dp"
    android:padding="18dp"
    android:background="@drawable/whitebox"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/row_result_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent"
        android:paddingStart="20dp"
        android:text="1. 절대 있을 수 없다.."
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/row_result_crown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/crown"
        app:layout_constraintBottom_toBottomOf="@+id/row_result_text"
        app:layout_constraintStart_toEndOf="@id/row_result_text"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/row_result_grayline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/gray_line"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/row_result_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/row_result_blueline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/blue_line"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/row_result_text"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>


